<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/zenfit_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zenfit_logo"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZenFit"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here to Compete"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/logoText"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="Get Started"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/orange_btn" />

    <TextView
        android:id="@+id/loggedInStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/LogoutButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Currently logged in as: username"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="match_parent"
        android:layout_above="@id/getStartedButton"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/orange_btn" />

</RelativeLayout>