<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zenfit_background"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Workout Logging"
            android:textColor="#B0B0B0"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- Scrollable Content Container -->
    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/workoutsListCard"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Main Exercise Card -->
            <RelativeLayout
                android:id="@+id/exerciseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_background"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iconTimer"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/baseline_timer" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_star_24" />

                <TextView
                    android:id="@+id/exerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconTimer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Pushups"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/repsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exerciseName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Reps: 10"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/completedSetsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/repsDisplay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Completed Sets:"
                    android:textColor="#B0B0B0"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/completedSetsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/completedSetsLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="3/5"
                    android:textColor="#B0B0B0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/completedSetsValue"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="6dp"
                    android:text="Weight: 150lbs"
                    android:textColor="@color/orange"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/restContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weightLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/restTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rest: 80 seconds"
                        android:textColor="@color/orange"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnEditRest"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/orange" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- Timer Section -->
            <RelativeLayout
                android:id="@+id/timerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exerciseCard"
                android:layout_marginTop="16dp">

                <SeekBar
                    android:id="@+id/timerSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1800"
                    android:progress="479"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/orange"
                    android:progressBackgroundTint="#404040" />

                <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timerSeekBar"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="7:59"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timerSeekBar"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:text="30:00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <!-- Playback Controls -->
                <LinearLayout
                    android:id="@+id/playbackControls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/currentTime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPrevious"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/btnprevious_img" />

                    <ImageButton
                        android:id="@+id/btnPlayPause"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/play" />

                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/btnnext_img" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Reps and Sets Controls -->
            <LinearLayout
                android:id="@+id/controlsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timerSection"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Reps Control -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reps:"
                        android:textColor="#B0B0B0"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnDecreaseReps"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/btnincreasereps_img" />

                        <TextView
                            android:id="@+id/repsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="16dp"
                            android:minWidth="40dp"
                            android:text="10"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnIncreaseReps"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/plus_img" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sets Control -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sets:"
                        android:textColor="#B0B0B0"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnDecreaseSets"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/btnincreasereps_img" />

                        <TextView
                            android:id="@+id/setsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="16dp"
                            android:minWidth="40dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnIncreaseSets"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/plus_img" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Workout Library Card - Fixed at bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/workoutsListCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Library"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/workoutsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/navbar_ellipse"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/navbar_home_orange" />

        <ImageButton
            android:id="@+id/navWorkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/navbar_gym" />

        <ImageButton
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/navbar_add" />

        <ImageButton
            android:id="@+id/navCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/navbar_calendar" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/navbar_image" />
    </LinearLayout>
</RelativeLayout>
