<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#2A2A2A"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/workoutNameBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push ups"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/workoutDurationBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="30 min"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workoutRepsBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 reps"
                android:textColor="#808080"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/workoutSetsBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 sets"
                android:textColor="#808080"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/workoutWeightBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="150 lbs"
            android:textColor="#808080"
            android:textSize="11sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
