<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zenfit_background"
    tools:context=".SignUp">

    <!-- Fixed Header Section -->
    <RelativeLayout
        android:id="@+id/fixedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zenfit_background">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/backarrow"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/signupLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/zenfit_logo" />

        <TextView
            android:id="@+id/signupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_below="@id/signupLogo"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/signupSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help us finish setting up your account."
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:layout_below="@id/signupTitle"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/signupSubtitle"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="25dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account information"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:drawableStart="@drawable/iconround1"
                android:drawablePadding="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp" />

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biodata information"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:drawableStart="@drawable/iconround2"
                android:drawablePadding="5dp"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fixedHeader"
        android:layout_above="@id/continueButton"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="20dp">

            <!-- Profile Picture Section -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile_pic"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignEnd="@id/profileImageView"
                    android:layout_alignBottom="@id/profileImageView"
                    android:src="@drawable/camera"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:contentDescription="Add photo" />
            </RelativeLayout>

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="E.g Johntheone"
                android:drawableStart="@drawable/user"
                android:drawablePadding="10dp"
                android:background="@drawable/input_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Enter your email address"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:background="@drawable/input_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Enter a password"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="10dp"
                android:background="@drawable/input_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Confirm password"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="10dp"
                android:background="@drawable/input_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/orange_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
