<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zenfit_background"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_camera"
        android:contentDescription="Camera" />

    <TextView
        android:id="@+id/upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Upload the picture of your\ntasty meal"
        android:textAlignment="center"
        android:textColor="#999999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/upload_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/orange_btn"
        android:text="Take Photo"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_meal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_take_photo"
        android:layout_marginTop="32dp"
        android:background="#3A3A3A"
        android:hint="E.g Baked Salmon"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777" />

    <EditText
        android:id="@+id/et_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_meal_name"
        android:layout_marginTop="8dp"
        android:background="#3A3A3A"
        android:hint="E.g 230"
        android:inputType="number"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777" />

    <EditText
        android:id="@+id/et_carbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_calories"
        android:layout_marginTop="8dp"
        android:background="#3A3A3A"
        android:drawableStart="@drawable/email"
        android:drawablePadding="12dp"
        android:hint="E.g 115 grams"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777" />

    <EditText
        android:id="@+id/et_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_carbs"
        android:layout_marginTop="8dp"
        android:background="#3A3A3A"
        android:drawableStart="@drawable/email"
        android:drawablePadding="12dp"
        android:hint="E.g 15 grams"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777" />

    <Button
        android:id="@+id/btn_upload_meal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_protein"
        android:layout_marginTop="24dp"
        android:background="@drawable/orange_btn"
        android:text="Upload Meal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
