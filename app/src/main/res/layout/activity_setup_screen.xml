<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/zenfit_background"
    android:padding="24dp"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/zenfit_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setup ZenFit"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us about yourself so that we can\nmake ZenFit truly yours"
        android:textSize="13sp"
        android:textColor="@color/light_gray"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconWeight"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/weight" />

            <EditText
                android:id="@+id/weightField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iconWeight"
                android:layout_marginStart="10dp"
                android:hint="E.g 70"
                android:textColor="@color/white"
                android:textColorHint="@color/hintText"
                android:background="@null"
                android:inputType="numberDecimal"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="@color/light_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconHeight"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/heightField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iconHeight"
                android:layout_marginStart="10dp"
                android:hint="E.g 5 ft 10 in"
                android:textColor="@color/white"
                android:textColorHint="@color/hintText"
                android:background="@null"
                android:inputType="text"
                android:paddingStart="4dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily average activity"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconActivity"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/activityField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iconActivity"
                android:layout_marginStart="10dp"
                android:hint="E.g 70"
                android:textColor="@color/white"
                android:textColorHint="@color/hintText"
                android:background="@null"
                android:inputType="number"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mins"
                android:textColor="@color/light_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Finish Setup"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/orange_btn" />
    </LinearLayout>
</LinearLayout>
